<!-- app/views/posts/index.html.erb -->
<h1>All Posts</h1>

<!-- app/views/posts/index.html.erb -->
<%= link_to 'Sign Up', new_user_registration_path, data: { turbo_frame: "_top" } %>
<%= link_to 'Sign In', new_user_session_path, data: { turbo_frame: "_top" } %>
<%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>


<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <% if user_signed_in? %>
      <p>Posted by: <%= post.user.email %></p>
    <% else %>
      <p>Posted by: Anonymous</p>
    <% end %>
  </div>
<% end %>
